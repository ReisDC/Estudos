package Capitulo2;

public class atividade2_cap2 {
	public static void main(String args[]) {
		int n = 3;
		double resultado = soma5(n);
		System.out.println("Resultado: " + resultado);
	}
		
		public static double soma5(int n) {
			
			if(n == 1) {
				return 4;
			}else if (n%2==0) {
				return(-4.0/(2*n-1)+ soma5(n-1));
			}else {
				return(4.0/(2*n-1)+ soma5(n-1));
				
			}
		
	}
} 



