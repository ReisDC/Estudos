package duplamente;

public class Testar_questao7 {
	public class TesteListaDupla {
	    public static void main(String[] args) {
	        // Criando a lista duplamente encadeada
	        ListaDupla lista = new ListaDupla();

	        // Inserindo alguns elementos na lista
	        for (int i = 1; i <= 5; i++) {
	            lista.inserirNoFim(i);
	        }

	        // Imprimindo a lista original
	        System.out.println("Lista original:");
	        imprimirLista(lista);

	        // Dividindo a lista ao meio
	        ListaDupla novaLista = lista.dividirAoMeio();

	        // Imprimindo a lista original após divisão
	        System.out.println("\nLista original após divisão:");
	        imprimirLista(lista);

	        // Imprimindo a nova lista
	        System.out.println("\nNova lista:");
	        imprimirLista(novaLista);
	    }

	    // Método para imprimir os valores da lista
	    public static void imprimirLista(ListaDupla lista) {
	        NoDupla atual = lista.getPrim();
	        while (atual != null) {
	            System.out.print(atual.getValor() + " ");
	            atual = atual.getProx();
	        }
	        System.out.println();
	    }
	}

}
